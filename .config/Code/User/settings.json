{
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "editor.fontSize": 14,
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontWeight": "normal",
    "editor.fontLigatures": false,
    "editor.rulers": [80],
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "on",
    "editor.tabSize": 4,
    "editor.stickyTabStops": true,
    "editor.minimap.enabled": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.renderLineHighlight": "all",
    "editor.autoClosingDelete": "auto",
    "editor.semanticHighlighting.enabled": true,

    // Needed to start vscode under wayland
    // https://github.com/microsoft/vscode/issues/146349#issuecomment-1120386009
    "window.titleBarStyle": "custom",


    "editor.semanticTokenColorCustomizations": {
        "[Community Material Theme Darker High Contrast]": {
            "enabled": true,
            "rules": {
                "namespace": "#F5A191",
                "type": "#89DDFF",
                "enumMember": "#F78C6C",
                "enum": "#89DDFF",
                "struct": "#89DDFF",
                "property": "#ffdfb6",
            }
        }
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "keyword.other",
                "settings": {
                    "foreground": "#C792EA",
                }
            },
            {
                "scope": "keyword.control",
                "settings": {
                    "foreground": "#C792EA",
                    "fontStyle": ""
                }
            },
            {
                "scope": "variable.parameter",
                "settings": {
                    "foreground": "#EEFFFF",
                }
            },
            {
                "scope": "support.type",
                "settings": {
                    "foreground": "#89DDFF",
                }
            }
        ]
    },


    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontWeight": "normal",
    
    "explorer.confirmDragAndDrop": true,

    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.res": "${capture}.mjs, ${capture}.js, ${capture}.cmi, ${capture}.cmt, ${capture}.cmj"
    },

    "files.exclude": {
        "**/.git": true,
        "node_modules": false,
        "**/*.aux": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.out": true,
        "**/*.toc": true,
        "**/*.log": true,
        "**/*.idx": true,
        "**/*.ilg": true,
        "**/*.ind": true,
        "**/*.gz": false,
        "**/*.cmi": true,
        "**/*.cmt": true,
        "**/*.cmj": true
    },

    "gitlens.codeLens.enabled": false,


    // TypeScript
    "typescript.tsserver.log": "off",
    "typescript.inlayHints.parameterNames.enabled": "none",
    "typescript.inlayHints.variableTypes.enabled": false,
    // JS
    "javascript.updateImportsOnFileMove.enabled": "always",

    //Markdown
    "markdown.updateLinksOnFileMove.enabled": "prompt",

    // OCaml
    "ocaml.trace.server": "off",
    "ocaml.server.extraEnv": {"OCAMLLSP_HOVER_IS_EXTENDED": "1"},
    
    // R
    // "r.rpath.linux": "radian",
    "r.rmarkdown.knit.defaults.knitWorkingDirectory": "workspace root",
    "r.rmarkdown.knit.useBackgroundProcess": true,
    "[rmd]": {
        "editor.wordWrap": "bounded"
    },
    // Reason
    "[reason]": {
        "editor.formatOnSave": true
    },
    // JSON
    "json.format.enable": false,
    "json.schemaDownload.enable": false,
    // Tex
    "[latex]": {
        "editor.wordWrap": "bounded"
    },
    // Rust
    "rust-analyzer.trace.server": "verbose",

    // ReScript
    "[rescript]": {
        "editor.fontLigatures": false,
    },
    "rescript.settings.askToStartBuild": false,
    "rescript.settings.codeLens": true,
    "rescript.settings.inlayHints.enable": false,

    // YAML
    "redhat.telemetry.enabled": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },

    "notebook.lineNumbers": "on",
    "notebook.diff.ignoreMetadata": true,
    
    "git.openRepositoryInParentFolders": "never",
    "extensions.ignoreRecommendations": true,
    "workbench.sideBar.location": "right"
}
