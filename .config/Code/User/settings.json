{
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Community Material Theme Darker High Contrast",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.decorations.colors": true,
    "editor.fontSize": 14,
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontWeight": "normal",
    "editor.fontLigatures": true,
    "editor.rulers": [80],
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "on",
    "editor.tabSize": 4,
    "editor.stickyTabStops": true,
    "editor.minimap.enabled": false,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.renderLineHighlight": "all",
    "editor.autoClosingDelete": "auto",
    "editor.semanticHighlighting.enabled": true,


    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontWeight": "normal",
    
    "explorer.confirmDragAndDrop": true,
    "files.exclude": {
        "**/.git": true,
        "node_modules": false,
        "**/*.aux": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.out": true,
        "**/*.toc": true,
        "**/*.log": true,
        "**/*.idx": true,
        "**/*.ilg": true,
        "**/*.ind": true,
        "**/*.gz": false
    },

    // TypeScript
    "typescript.inlayHints.parameterNames.enabled": "all",
    "typescript.inlayHints.variableTypes.enabled": true,

    // OCaml
    "ocaml.trace.server": "verbose",
    
    // R
    "[rmd]": {
        "editor.wordWrap": "bounded"
    },
    // Reason
    "[reason]": {
        "editor.formatOnSave": true
    },
    // JSON
    "json.format.enable": false,
    "json.schemaDownload.enable": false,
    // Tex
    "[latex]": {
        "editor.wordWrap": "bounded"
    },
    // Rust
    "rust-analyzer.checkOnSave.enable": false,
    "rust-analyzer.trace.server": "off",
    
    // JS
    "javascript.updateImportsOnFileMove.enabled": "always",

    // ReScript
    "rescript.settings.askToStartBuild": false,
    "rescript.settings.codeLens": true,
    "rescript.settings.inlayHints.enable": true,
    "rescript.settings.signatureHelp.enable": true
}